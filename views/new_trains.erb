<h1>Add a train</h1>

<form action="/trains" method="post">
  <div class="form-group">
    <label for="train_name">Train Name</label>
    <input name="train_name" class="form-control" type="text">
    <label for="train_time">Train Time</label>
    <input name="train_time" class="form-control" type="time">
  </div>
  <button type="submit" class="btn">Submit</button>
</form>